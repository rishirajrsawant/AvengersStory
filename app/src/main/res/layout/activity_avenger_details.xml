<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00111a"
    tools:context=".AvengerDetails">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="NAME"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#a6a6a6"
        android:fontFamily="@font/roboto_mono_medium" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="REAL IDENTITY"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#a6a6a6"
        android:fontFamily="@font/roboto_mono_medium" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_rlnmlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Name:"
            android:textAlignment="center"
            android:textColor="#a6a6a6"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_mono_medium" />

        <TextView
            android:id="@+id/textview_agelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Age:"
            android:textAlignment="center"
            android:textColor="#a6a6a6"
            android:textSize="18sp"
            android:layout_below = "@+id/textView_rlnmlbl"
            android:fontFamily="@font/roboto_mono_medium" />

        <TextView
            android:id="@+id/textview_fam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Family:"
            android:textAlignment="center"
            android:textColor="#a6a6a6"
            android:textSize="18sp"
            android:layout_below = "@+id/textview_agelbl"
            android:fontFamily="@font/roboto_mono_medium" />


        <TextView
            android:id="@+id/textview_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Nametext"
            android:textAlignment="center"
            android:textColor="#a6a6a6"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/textView_rlnmlbl"
            android:fontFamily="@font/roboto_mono_medium" />

        <TextView
            android:id="@+id/textview_agetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="Agetext"
            android:textAlignment="center"
            android:textColor="#a6a6a6"
            android:textSize="18sp"
            android:layout_below="@+id/textView_rlnmlbl"
            android:layout_toRightOf="@+id/textview_agelbl"
            android:fontFamily="@font/roboto_mono_medium" />

        <TextView
            android:id="@+id/textview_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FamText"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_below="@+id/textview_agelbl"
            android:layout_toRightOf="@+id/textview_fam"
            android:layout_margin="18dp"
            android:textColor="#a6a6a6"
            android:fontFamily="@font/roboto_mono_medium" />


        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_fam"
            android:layout_marginStart="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/my_button_bg"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="MORE INFO"
            android:textAlignment="center"
            android:textColor="#bfbfbf"
            android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>