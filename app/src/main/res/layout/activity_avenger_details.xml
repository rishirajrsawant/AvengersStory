<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AvengerDetails">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/textView"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="REAL IDENTITY"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_rlnmlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_realname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nametext"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView_rlnmlbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_agelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView_rlnmlbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_agetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agetext"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView_rlnmlbl"
        android:layout_toRightOf="@+id/textview_agelbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_fam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_agelbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FamText"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_agelbl"
        android:layout_toRightOf="@+id/textview_fam"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_noavglbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If not an Avenger:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_fam"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_noavg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoAvgText"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_fam"
        android:layout_toRightOf="@+id/textview_noavglbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_implbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importance:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_noavglbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imptext"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_noavglbl"
        android:layout_toRightOf="@+id/textview_implbl"
        android:layout_margin="18dp"
        android:textStyle="bold" />

</RelativeLayout>